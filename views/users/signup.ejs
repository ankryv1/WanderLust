<% layout("layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <div>
            <form action="/signup" method="POST" novalidate class="needs-validation"> 
              <div>
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" placeholder=" Enter your name" class="form-control" required>
              </div>
              <div>
                <label for="password" class="form-label">Password</label>
                  <input type="password" name="password" placeholder="Enter password" id="password" class="form-control" required>
                  <div class="invalid-feedback">Please enter correct password</div>
              </div>
              <div>
                <label for="email" class="form-label">Email</label>
                  <input type="email" name="email" placeholder="Enter password" class="form-control" required>
                  <div class="invalid-feedback">Please enter correct email</div>
              </div>
              <br>
            <button class="btn btn-success">Sign in</button>
            </form>
        </div>
    </div>
</div>