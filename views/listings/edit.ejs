<% layout("/layouts/boilerplate") %>

<div class="row">
  <div class="col-8">

<form 
  method="POST"
  action="/listings/<%= toEditC._id %>?_method=PUT"
  enctype="multipart/form-data"
  class="needs-validation"
  novalidate
>

  <div class="mb-3">
    <label class="form-label">Title</label>
    <input
      type="text"
      name="title"
      class="form-control"
      value="<%= toEditC.title %>"
      required
    >
  </div>

  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea
      name="description"
      class="form-control"
      required
    ><%= toEditC.description %></textarea>
  </div>

  <div class="row">
    <div class="mb-3 col-md-4">
      <label class="form-label">Price</label>
      <input
        type="number"
        name="price"
        class="form-control"
        value="<%= toEditC.price %>"
        required
      >
    </div>

    <div class="mb-3 col-md-8">
      <label class="form-label">Country</label>
      <input
        type="text"
        name="country"
        class="form-control"
        value="<%= toEditC.country %>"
        required
      >
    </div>
  </div>

  <div class="mb-3">
    <label class="form-label">Location</label>
    <input
      type="text"
      name="location"
      class="form-control"
      value="<%= toEditC.location %>"
      required
    >
  </div>

  <div class="mb-3">
    <label class="form-label">Upload New Image</label>
    <input
      type="file"
      name="image"
      class="form-control"
    >
  </div>

  <button class="btn btn-primary">Confirm</button>

</form>

  </div>
</div>
